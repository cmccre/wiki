= simple_form_for @article, html: { multipart: true } do |f|
	- if @article.errors.any?
		#errors
			%h2
			= pluralize(@article.errors.count, "error")
			prevented article from saving
			%ul
				- @article.errors.full_messages.each do |msg|
					%li= msg
	.form-group
		= f.input :title, input_html: { class: 'form-control' }

	.form-group
		= f.input :content, input_html: { class: 'form-control' }

	.form-group
		= f.input :tag_list, placeholder: "Tag with Comma-Separated Terms", input_html: { class: 'form-control' }	
	= f.button :submit, class: "btn btn-primary"